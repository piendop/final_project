<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="8dp"
    android:paddingBottom="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/white_border">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardpublished_title"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="17sp"
        android:text="Du lịch Phú Quốc: Cẩm nang từ A đến Z"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingTop="5dp"
        android:id="@+id/cardpublished_description"
        android:text="Mì Quảng, bún mắm nêm, gỏi mít, ốc hút, là những món đặc trưng nhất định phải thử khi đến Đà Nẵng."
        android:fontFamily="@font/notoserif_regular"
        />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_menu"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="8dp"
        android:layout_gravity="right"
        android:contextClickable="true"
        />
</LinearLayout>