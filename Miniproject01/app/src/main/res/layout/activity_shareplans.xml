<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SharePlanActivity"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--Top Section: Activity Screen Info-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share plans"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="30dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="26dp"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share your plans with other people"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="16dp"
                    android:textColor="#9B9B9B"
                    android:layout_marginLeft="16dp"
                    />
            </LinearLayout>
            <!--Body Content-->
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"
                    android:divider="@android:color/transparent"
                    android:dividerHeight="10.0sp"
                    android:id="@+id/list_plans"
                    >
                </ListView>
                <!--<include layout="@layout/layout_custom_card_1"/>-->
        </LinearLayout>
        <!--Bottom navigation bar-->
        <include layout="@layout/layout_bottom_navigation_view" />
    </RelativeLayout>
</LinearLayout>